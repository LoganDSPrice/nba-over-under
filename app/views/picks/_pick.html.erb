<div id="<%= dom_id(pick) %>" class="col m-1 p-0 ratio ratio-1x1">
  <% pick_is_correct = pick.correct? %>
  <% cell_classes = %w(p-0 d-flex justify-content-center align-items-center border border-3)%>
  <% cell_color_hash = { true => " bg-success ", false => " bg-danger ", nil => " bg-secondary " }%>
  <% cell_color = cell_color_hash[pick.correct?] %>
  <% icon_classes = { true => " fas fa-3x fa-arrow-alt-circle-up ", false => " far fa-3x fa-arrow-alt-circle-down ", nil => " boop " } %>
  <% border_color = pick.locked? ? " border-warning " : " border-dark " %>
  <div class="<%= cell_classes.join(" ") + cell_color + border_color%>" style="border-radius: 15px;">
    <i class="<%= icon_classes[pick.over] %> "></i>
  </div>

</div>
