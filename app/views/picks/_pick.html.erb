<div id="<%= dom_id(pick) %>" class="col m-1 p-0 ratio ratio-1x1">
  <% pick_is_correct = pick.correct? %>
  <% cell_classes = %w(p-0 rounded-sm d-flex justify-content-center align-items-center)%>
  <% cell_color = pick_is_correct ? " bg-success " : " bg-danger " %>
  <% icon_classes = { true => "fas fa-3x fa-arrow-alt-circle-up ", false => "far fa-3x fa-arrow-alt-circle-down ", nil => "boop" } %>
  <% border_classes = pick.locked? ? " border border-light border-5" : "" %>
  <div class="<%= cell_classes.join(" ") + cell_color + border_classes %>">
    <i class="<%= icon_classes[pick.over] %> "></i>
  </div>

</div>
