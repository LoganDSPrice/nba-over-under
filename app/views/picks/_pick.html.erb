<div class="col" id="<%= dom_id(pick) %>" >
  <div class="row">
    <div class="col m-1 p-0 ratio ratio-1x1 ">
      <% cell_classes = [
        "d-flex",
    "justify-content-center",
    "align-items-center",
    "border",
    "border-3",
    "border-dark",
  ] %>
      <% cell_classes %>
      <% icon_classes = { true => " fas fa-3x fa-chevron-double-up ", false => " fas fa-3x fa-chevron-double-down ", nil => "fal fa-3x fa-question" } %>
      <div class="<%= cell_classes.join(" ") %>" style="border-radius: 15px;">
        <i class="<%= icon_classes[pick.over] %> "></i>
        <% if pick.locked? %>
          <div class="position-absolute bottom-0 end-0 p-1 text-warning">
            <%= fa_icon("fad 2x lock-alt") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col d-flex justify-content-center">
      <% if pick.correct? %>
        <i class="fas fa-2x fa-check text-success"></i>
      <% else %>
        <i class="fas fa-2x fa-times text-danger"></i>
      <% end %>
    </div>
  </div>
</div>
