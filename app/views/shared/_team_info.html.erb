<div class="col" style="min-height: 100%; max-height: 100%; " >
  <div class="row m-1 align-items-center shadow" style="border-radius: 15px; <%= season_line.team.style %>">
    <div class="fs-2 <%= omit_pace ? "col-6" : "col-4" %> my-1">
      <div class="ratio ratio-1x1 d-flex align-items-center">
        <div class="row m-0">
          <%= image_tag season_line.team.img_url, style: "margin:auto; max-height: 100%; height: auto; width: auto; max-width: 100%;" %>
        </div>
      </div>
    </div>
    <div class="<%= omit_pace ? "col-6" : "col-8" %>">
      <div class="row">
        <div class="fs-2 col my-1 d-flex justify-content-center"><%= season_line.line %></div>
        <% unless omit_pace %>
          <div class="fs-2 col my-1 d-flex justify-content-center"><%= season_line.projected_wins.round(1) %></div>
        <% end %>
      </div>
      <div class="row">
        <div class="fs-4 col text-center">
          <%= season_line.team.city %> <%= season_line.team.name %>
        </div>
      </div>
    </div>
  </div>
</div>
